{
  "name": "tan-chirper",
  "version": "1.0.0",
  "description": "Twitter-like social media application with 141 character limit for posts",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite dev",
    "dev:backend": "tsx watch server/index.ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "tsc --project tsconfig.backend.json",
    "type-check": "tsc --noEmit && tsc --project tsconfig.backend.json --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "db:migrate": "tsx server/db/migrate.ts",
    "db:seed": "tsx server/db/seed.ts"
  },
  "dependencies": {
    "@tanstack/react-form": "^0.34.2",
    "@tanstack/react-query": "^5.59.16",
    "@tanstack/react-query-devtools": "^5.85.3",
    "@tanstack/react-router": "^1.84.4",
    "@tanstack/react-router-devtools": "^1.131.10",
    "@tanstack/start": "^1.84.4",
    "@tanstack/zod-form-adapter": "^0.42.1",
    "argon2": "^0.44.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1",
    "uuidv7": "^1.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tanstack/router-plugin": "^1.131.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "keywords": [
    "social-media",
    "twitter-clone",
    "tanstack-start",
    "express",
    "typescript",
    "postgresql"
  ],
  "author": "",
  "license": "MIT"
}
