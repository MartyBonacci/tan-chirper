{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "outDir": "./dist/server",
    "composite": true,
    
    /* Node.js specific */
    "types": ["node"],
    
    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/shared/*": ["./shared/*"],
      "@/server/*": ["./server/*"]
    }
  },
  "include": [
    "server",
    "shared"
  ],
  "exclude": [
    "app",
    "node_modules",
    "dist",
    "build"
  ]
}